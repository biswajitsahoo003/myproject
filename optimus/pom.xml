				<module>optimus-location-entity</module>
				<module>optimus-serviceinventory-entity</module>
				<module>optimus-serviceassurance-entity</module>
				<module>optimus-serviceactivation-entity</module>
				<module>optimus-servicefulfillment-entity</module>
				<module>optimus-l2oworkflow-entity</module>
				<module>optimus-fulfillment-utils</module>
				<module>optimus-l2oworkflow-utils</module>
				<module>optimus-audit-entity</module>
                <module>optimus-common</module>
                <module>optimus-webserviceclient</module>
				<module>optimus-batch</module>
				<module>optimus-notification</module>
                <module>optimus-auth</module>
                <module>optimus-product</module>
				<module>optimus-service</module>
				<module>optimus-location</module>
				<module>optimus-customer</module>
				<module>optimus-oms-utils</module>
				<module>optimus-oms</module>
				<module>optimus-serviceinventory</module>
			    <module>optimus-wfe</module>
				<module>optimus-webhook</module>
				<module>optimus-ticketing</module>
