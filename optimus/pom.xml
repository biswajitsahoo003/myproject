        <artifactId>optimus-root</artifactId>
        <name>optimus root project</name>
        <version>1.0</version>
        <packaging>pom</packaging>      

        <modules> 
				<module>TclExceptionHandler</module>
				<module>optimus-productcatelog-entity</module>
